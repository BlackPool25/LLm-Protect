# Example environment configuration for LLM-Protect
# Copy this file to .env and update the values for your environment.

# HMAC Secret Key
HMAC_SECRET_KEY=change-me-in-production-use-strong-secret

# Upload settings
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=uploads

# Chunking settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# API settings
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
HF_TOKEN=your_hf_token_here

# AMD GPU Settings for RX 7900 GRE (RDNA3)
HSA_OVERRIDE_GFX_VERSION=11.0.0
HIP_VISIBLE_DEVICES=0
