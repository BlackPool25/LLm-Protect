# LLM-Protect Environment Configuration
# Copy this file to .env and update values as needed

# ========== Core Configuration ==========
HMAC_SECRET_KEY=your_secret_key_here_min_32_chars_generate_with_secrets_module
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# ========== File Upload Settings ==========
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=uploads
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# ========== Security Settings ==========

# Security Level: standard, paranoid
SECURITY_LEVEL=standard

# Feature Toggles
ENABLE_STEGANOGRAPHY_DETECTION=true
ENABLE_ADVANCED_UNICODE_ANALYSIS=true
ENABLE_SEMANTIC_CONFLICT_DETECTION=true
ENABLE_BEHAVIORAL_ANALYSIS=false

# Thresholds
THREAT_SCORE_THRESHOLD=0.75
MAX_SECURITY_ANALYSIS_TIME_MS=500
IMAGE_ANALYSIS_TIMEOUT=30

# ========== Cache Settings ==========
ENABLE_SECURITY_CACHE=true
SECURITY_CACHE_TTL=3600
SECURITY_CACHE_MAX_SIZE=10000

# ========== Advanced Features (Optional) ==========

# Threat Intelligence API (future use)
# THREAT_INTEL_API_KEY=your_api_key_here

# Redis Configuration (for distributed caching - future)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ========== Development/Debug ==========
# Set to true for verbose security logging
DEBUG_SECURITY=false
